{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "removeComments": true,
    "esModuleInterop": true,
    "declaration": true,
    "experimentalDecorators": true,
    "outDir": "./dist/src",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["dist/", "node_modules/**/*, test/**/*", "local-launcher.ts"]
}
