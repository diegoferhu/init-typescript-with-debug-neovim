{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "removeComments": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": false,
    "experimentalDecorators": true,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "local-launcher.ts"]
}
